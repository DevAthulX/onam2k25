
{
  "compilerOptions": {
    "rootDir": "server",
    "outDir": "dist/server",
    "moduleResolution": "Node16",
    "module": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
