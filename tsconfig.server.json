{
  "extends": "./tsconfig.json",
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist/server",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",        // ✅ override bundler
    "allowImportingTsExtensions": false // ✅ disable
  }
}
